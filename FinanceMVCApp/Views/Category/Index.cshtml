@model IEnumerable<BudgetTracker.Models.Category>

<!-- Main Container -->
<div class="container py-4" style="background:#f8f9fa;">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <!-- Page Title -->
        <h1 class="fw-bold">Categories</h1>
        <!-- Subtitle -->
        <p class="text-muted">Manage your categories and their allocated amounts.</p>
    </div>

    <!-- Categories Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <!-- Card Title -->
            <h4 class="fw-bold mb-3">
                <i class="fas fa-folder me-2 text-warning"></i>Your Categories
            </h4>

            <!-- Table Container -->
            <div class="table-responsive">
                <!-- Categories Table -->
                <table class="table table-hover align-middle table-sm">
                    <!-- Table Header -->
                    <thead class="table-light">
                        <tr>
                            <th>Name</th> <!-- Column for Category Name -->
                            <th>Allocated Amount</th> <!-- Column for Allocated Amount -->
                            <th class="text-end">Actions</th> <!-- Column for Action Buttons -->
                        </tr>
                    </thead>

                    <!-- Table Body -->
                    <tbody>
                        <!-- Check if Categories Exist -->
                        @if (Model.Any())
                        {
                            <!-- Loop Through Each Category -->
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <!-- Display Category Name -->
                                    <td>@category.Name</td>
                                    <!-- Display Allocated Amount (Formatted as Currency) -->
                                    <td>@category.AllocatedAmount.ToString("C")</td>
                                    <!-- Action Buttons -->
                                    <td class="text-end">
                                        <!-- View Details Button -->
                                        <a class="btn btn-info btn-sm" 
                                           href="@Url.Action("Details", "Category", new { id = category.Id })">
                                            <!-- Eye Icon and Button Text -->
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <!-- No Categories Fallback Row -->
                            <tr>
                                <td colspan="3" class="text-center text-muted">No categories available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
