@model BudgetTracker.Models.Category

<!-- Main Container -->
<div class="container">
    <!-- Page Header -->
    <h2 class="mb-4">Edit Category</h2>

    <!-- Form to Edit Category -->
    <form asp-action="Edit" method="post">
        <!-- Hidden Fields for Category ID and Budget ID -->
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="BudgetId" />

        <!-- Category Name Input -->
        <div class="mb-3">
            <!-- Label for Category Name -->
            <label asp-for="Name" class="form-label">Category Name</label>
            <!-- Input Field for Category Name -->
            <input asp-for="Name" class="form-control" />
            <!-- Validation Message for Name -->
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

 <!-- Initial Allocated Amount Input -->
<div class="mb-3">
    <!-- Label for Initial Allocated Amount -->
    <label asp-for="InitialAllocatedAmount" class="form-label">Initial Allocated Amount</label>
    <!-- Input Field for Initial Allocated Amount -->
    <input asp-for="InitialAllocatedAmount" 
           class="form-control" 
           type="number" 
           step="0.01" 
           min="0.01" 
           required 
           value="@Model.InitialAllocatedAmount.ToString("0.00")" />
    <!-- Validation Message for Initial Allocated Amount -->
    <span asp-validation-for="InitialAllocatedAmount" class="text-danger"></span>
</div>

<!-- Allocated Amount Input -->
<div class="mb-3">
    <!-- Label for Allocated Amount -->
    <label asp-for="AllocatedAmount" class="form-label">Allocated Amount</label>
    <!-- Input Field for Allocated Amount -->
    <input asp-for="AllocatedAmount" 
           class="form-control" 
           type="number" 
           step="0.01" 
           min="0.01" 
           required 
           value="@Model.AllocatedAmount.ToString("0.00")" />
    <!-- Validation Message for Allocated Amount -->
    <span asp-validation-for="AllocatedAmount" class="text-danger"></span>
</div>


        <!-- Action Buttons -->
        <button type="submit" class="btn custom-create-btn text-white">Save Changes</button>
        <!-- Cancel Button: Redirects to Budget Details -->
        <a asp-controller="Budget"
           asp-action="Details"
           asp-route-id="@Model.BudgetId"
           class="btn custom-edit-btn text-white">
            Cancel
        </a>
    </form>
</div>
