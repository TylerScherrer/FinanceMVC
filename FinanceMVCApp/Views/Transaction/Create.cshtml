@model BudgetTracker.Models.Transaction

<!-- Transaction Form Container -->
<div class="container py-5" style="background: #121212;">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-light">Add Transaction</h1>
        <p class="text-light">Record your transaction details below.</p>
    </div>

    <!-- Card Wrapper for Form -->
    <div class="card border-0 shadow-sm glass-panel">
        <div class="card-body">
            <!-- General Error Message Section -->
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey(""))
            {
                <div class="alert alert-danger" role="alert">
                    @foreach (var error in ViewData.ModelState[""].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <!-- Form for Creating a New Transaction -->
            <form asp-action="Create" method="post">
                <!-- Hidden Input for Category ID -->
                <input type="hidden" asp-for="CategoryId" />

                <!-- Description Field -->
                <div class="mb-4">
                    <label asp-for="Description" class="form-label text-light fw-bold">Description</label>
                    <!-- Input Field for Description -->
                    <input asp-for="Description" 
                           class="form-control bg-transparent text-light border-secondary" 
                           placeholder="Enter description" />
                    <!-- Validation Error Message for Description -->
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Amount Field -->
                <div class="mb-4">
                    <label asp-for="Amount" class="form-label text-light fw-bold">Amount</label>
                    <!-- Input Field for Amount -->
                    <input asp-for="Amount" 
                           class="form-control bg-transparent text-light border-secondary" 
                           placeholder="Enter amount" />
                    <!-- Validation Error Message for Amount -->
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <!-- Date Field -->
                <div class="mb-4">
                    <label asp-for="Date" class="form-label text-light fw-bold">Date</label>
                    <!-- Date Picker for Transaction Date -->
                    <input asp-for="Date" 
                           class="form-control bg-transparent text-light border-secondary" 
                           type="date" />
                    <!-- Validation Error Message for Date -->
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary fw-semibold">
                        <i class="fas fa-save me-2"></i>Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
