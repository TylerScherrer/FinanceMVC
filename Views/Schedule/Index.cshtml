@model BudgetTracker.Models.ScheduleViewModel

<div class="d-flex flex-nowrap">

    <!-- Sidebar Navigation -->
    <nav id="sidebar" class="d-none d-md-flex flex-column p-3 glass-panel">
        <h3 class="fw-bold mb-4 text-light">
            <i class="fas fa-coins me-2"></i>BudgetTracker
        </h3>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item mb-2">
                <a class="sidebar-link" asp-area="" asp-controller="Budget" asp-action="Index">
                    <i class="fas fa-chart-line me-2"></i>Dashboard
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="sidebar-link active" asp-area="" asp-controller="Schedule" asp-action="Index">
                    <i class="fas fa-calendar-alt me-2"></i>Schedule
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="sidebar-link" asp-area="" asp-controller="ToDo" asp-action="Index">
                    <i class="fas fa-tasks me-2"></i>To-Do List
                </a>
            </li>
        </ul>
        <div class="mt-auto text-light small">
            <p class="mb-0">&copy; 2024 BudgetTracker</p>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="flex-fill p-4" style="background: #121212;">
        <!-- Hero Section -->
        <div class="hero-section text-light mb-4">
            <div class="hero-section-content">
                <h1 class="display-5 fw-bold">My Financial Schedule</h1>
                <p class="lead mb-0">
                    Organize your tasks and stay on top of your weekly and daily commitments.
                </p>
            </div>
        </div>

        <!-- Content -->
        <div class="container-fluid px-4">
            <div class="row g-3">
                <!-- Left Column -->
                <div class="col-lg-8">
                    <!-- Add Task Section -->
                    <div class="card glass-panel mb-4 text-light">
                        <div class="card-body">
                            <h4 class="fw-bold mb-3 text-primary">
                                <i class="fas fa-plus-circle me-2"></i>Add a New Task
                            </h4>
                            <form method="post" asp-action="AddTask" asp-controller="Schedule" class="row g-2">
                                <div class="col-md-5">
                                    <input type="text"
                                           name="Name"
                                            class="form-control bg-transparent text-light border-light"
                                            style="color: white; placeholder-text-color: white;"
                                           placeholder="Task Name"
                                           required />
                                </div>
                                <div class="col-md-5">
                                    <input type="date"
                                        name="Date"
                                        class="form-control bg-transparent text-light border-light"
                                        style="color: white !important; background-color: transparent !important; border-color: lightgray !important;"
                                        required />
                                </div>



                                <div class="col-md-2 d-grid">
                                    <button type="submit" class="btn btn-outline-primary fw-semibold">
                                        Add
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Current Tasks Section -->
                    <h4 class="fw-bold mb-3 text-light">
                        <i class="fas fa-tasks me-2 text-warning"></i>Tasks for This Week
                    </h4>
                    @if (Model.CurrentWeekTasks.Any())
                    {
                        <div class="row row-cols-1 row-cols-md-2 g-3">
                            @foreach (var task in Model.CurrentWeekTasks)
                            {
                                <div class="col">
                                    <div class="card glass-panel h-100 text-light">
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="fw-bold">@task.Name</h5>
                                            <div class="text-muted mb-3">
                                                Date: @task.Date.ToShortDateString()
                                            </div>
                                            <form method="post" asp-action="DeleteTask" asp-controller="Schedule">
                                                <input type="hidden" name="id" value="@task.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center">
                            No tasks available for this week.
                        </div>
                    }
                </div>

                <!-- Right Column -->
                <div class="col-lg-4">
                    <!-- Upcoming Tasks -->
                    <div class="card glass-panel mb-4">
                        <div class="card-body text-light">
                            <h5 class="fw-bold mb-3 text-info">
                                <i class="fas fa-calendar-alt me-2"></i>Upcoming Tasks
                            </h5>
                            @if (Model.UpcomingWeekTasks.Any())
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var task in Model.UpcomingWeekTasks)
                                    {
                                        <li class="list-group-item bg-transparent text-light border-bottom">
                                            <strong>@task.Name</strong>
                                            <small class="task-date">Date: 1/17/2025</small>

                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="alert alert-secondary text-center">
                                    No upcoming tasks.
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Future Tasks -->
                    <div class="card glass-panel text-light">
                        <div class="card-body">
                            <h5 class="fw-bold mb-3 text-secondary">
                                <i class="fas fa-calendar-plus me-2"></i>Future Tasks
                            </h5>
                            @if (Model.FarthestTasks.Any())
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var task in Model.FarthestTasks)
                                    {
                                        <li class="list-group-item bg-transparent text-light border-bottom">
                                            <strong>@task.Name</strong>
                                            <small class="text-muted d-block">
                                                Date: @task.Date.ToShortDateString()
                                            </small>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="alert alert-secondary text-center">
                                    No future tasks.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
