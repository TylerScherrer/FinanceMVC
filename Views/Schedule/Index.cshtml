@model BudgetTracker.Models.ScheduleViewModel
@using BudgetTracker.Helpers


<div class="d-flex flex-nowrap">

    <!-- Sidebar Navigation -->
<nav id="sidebar" class="d-flex flex-column p-3 custom-sidebar">
    <h3 class="fw-bold mb-4 text-center sidebar-title">
        <i class="fas fa-coins me-2"></i>Organizer
    </h3>
    <ul class="nav flex-column sidebar-links">
        <li class="nav-item">
            <a class="nav-link active" asp-area="" asp-controller="Budget" asp-action="Index">
                <i class="fas fa-chart-line me-2"></i>Dashboard
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Schedule" asp-action="Index">
                <i class="fas fa-calendar-alt me-2"></i>My Schedule
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="ToDo" asp-action="Index">
                <i class="fas fa-tasks me-2"></i>My Tasks
            </a>
        </li>
    </ul>
    <div class="mt-auto text-center text-light footer-text">
        &copy; 2024 BudgetTracker
    </div>
</nav>
    <!-- Main Content -->
    <div class="flex-fill p-4" style="background: #121212;">
        <!-- Hero Section -->
        <div class="hero-section text-light mb-4">
            <h1 class="display-5 fw-bold">My Financial Schedule</h1>
            <p class="lead mb-0">Organize your tasks and stay on top of your weekly and daily commitments.</p>
        </div>

        <!-- Content -->
        <div class="container-fluid px-4">
            <div class="row g-3">
                <!-- Left Column -->
                <div class="col-lg-8">
                    <!-- Add Task Section -->
                    <div class="card glass-panel mb-4 text-light">
                        <div class="card-body">
                            <h4 class="fw-bold mb-3 text-primary">
                                <i class="fas fa-plus-circle me-2"></i>Add a New Task
                            </h4>
                            <form method="post" asp-action="AddTask" asp-controller="Schedule" class="row g-2">
                                <div class="col-md-4">
                                    <input type="text" name="Name" class="form-control bg-transparent text-light border-light" placeholder="Task Name" required />
                                </div>
                                <div class="col-md-4">
                                    <input type="date" name="Date" class="form-control bg-transparent text-light border-light" required />
                                </div>
                                <div class="col-md-2">
                                    <input type="time" name="Time" class="form-control bg-transparent text-light border-light" required />
                                </div>
                                <div class="col-md-2 d-grid">
                                    <button type="submit" class="btn btn-outline-primary fw-semibold">Add</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Current Tasks Section -->
                    <h4 class="fw-bold mb-3 text-light">
                        <i class="fas fa-tasks me-2 text-warning"></i>Tasks for This Week
                    </h4>
                    @if (Model.CurrentWeekTasks.Any())
                    {
                        <div class="row row-cols-1 row-cols-md-2 g-3">
                            @foreach (var task in Model.CurrentWeekTasks)
                            {
                                <div class="col">
                                    <div class="card glass-panel h-100 text-light">
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="fw-bold">@task.Name</h5>
                                            <p class="text-muted">Date: @task.Date.ToShortDateString()</p>
                                            <p class="text-muted">Time: @BudgetTracker.Helpers.TimeFormatHelper.FormatTimeSpanTo12Hour(task.Time)</p>




                                            <form method="post" asp-action="DeleteTask" asp-controller="Schedule">
                                                <input type="hidden" name="id" value="@task.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center">No tasks available for this week.</div>
                    }
                </div>

                <!-- Right Column -->
                <div class="col-lg-4">
                    <!-- Upcoming Tasks -->
                    <div class="card glass-panel mb-4">
                        <div class="card-body text-light">
                            <h5 class="fw-bold mb-3 text-info">
                                <i class="fas fa-calendar-alt me-2"></i>Upcoming Tasks
                            </h5>
                            @if (Model.UpcomingWeekTasks.Any())
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var task in Model.UpcomingWeekTasks)
                                    {
                                        <li class="list-group-item bg-transparent text-light border-bottom">
                                            <strong>@task.Name</strong>
                                            <p class="text-muted">Date: @task.Date.ToShortDateString()</p>
                                            <p class="text-muted">Time: @TimeFormatHelper.FormatTimeSpanTo12Hour(task.Time)</p>


                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="alert alert-secondary text-center">No upcoming tasks.</div>
                            }
                        </div>
                    </div>

                    <!-- Future Tasks -->
                    <div class="card glass-panel text-light">
                        <div class="card-body">
                            <h5 class="fw-bold mb-3 text-secondary">
                                <i class="fas fa-calendar-plus me-2"></i>Future Tasks
                            </h5>
                            @if (Model.FarthestTasks.Any())
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var task in Model.FarthestTasks)
                                    {
                                        <li class="list-group-item bg-transparent text-light border-bottom">
                                            <strong>@task.Name</strong>
                                            <p class="text-muted">Date: @task.Date.ToShortDateString()</p>
                                            <p class="text-muted">Time: @TimeFormatHelper.FormatTimeSpanTo12Hour(task.Time)</p>


                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="alert alert-secondary text-center">No future tasks.</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
