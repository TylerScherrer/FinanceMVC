@model BudgetTracker.Models.ScheduleViewModel

<div class="container py-4" style="background: #121212;">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-light">Schedule</h1>
        <p class="text-muted">Plan your tasks for the week and beyond.</p>
    </div>

    <!-- Form to Add New Task -->
    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-body">
            <h4 class="fw-bold mb-3 text-primary"><i class="fas fa-plus-circle me-2"></i>Add a New Task</h4>
            <form method="post" asp-action="AddTask" asp-controller="Schedule" class="row g-3">
                <div class="col-md-6">
                    <label for="Name" class="form-label fw-semibold">Task Name</label>
                    <input type="text" class="form-control bg-secondary text-light border-0" name="Name" id="Name" placeholder="e.g. Meeting with client" required />
                </div>
                <div class="col-md-6">
                    <label for="Date" class="form-label fw-semibold">Date</label>
                    <input type="date" class="form-control bg-secondary text-light border-0" name="Date" id="Date" required />
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Add Task
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-4">
        <!-- Current Week Tasks -->
        <div class="col-md-6">
            <div class="card bg-dark text-light border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-3 text-success"><i class="fas fa-calendar-week me-2"></i>Tasks for This Week</h5>
                    @if (Model.CurrentWeekTasks.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var task in Model.CurrentWeekTasks)
                            {
                                <li class="list-group-item bg-secondary text-light d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@task.Name</strong> 
                                        <small class="text-muted">@task.Date.ToShortDateString()</small>
                                    </div>
                                    <form method="post" asp-action="DeleteTask" asp-controller="Schedule" class="d-inline">
                                        <input type="hidden" name="id" value="@task.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center">
                            No tasks for this week
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Upcoming Week Tasks -->
        <div class="col-md-6">
            <div class="card bg-dark text-light border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-3 text-info"><i class="fas fa-calendar-alt me-2"></i>Upcoming Tasks</h5>
                    @if (Model.UpcomingWeekTasks.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var task in Model.UpcomingWeekTasks)
                            {
                                <li class="list-group-item bg-secondary text-light d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@task.Name</strong> 
                                        <small class="text-muted">@task.Date.ToShortDateString()</small>
                                    </div>
                                    <form method="post" asp-action="DeleteTask" asp-controller="Schedule" class="d-inline">
                                        <input type="hidden" name="id" value="@task.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center">
                            No upcoming tasks
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Future Tasks Section -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card bg-dark text-light border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-3 text-secondary"><i class="fas fa-calendar-plus me-2"></i>Future Tasks</h5>
                    @if (Model.FarthestTasks.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var task in Model.FarthestTasks)
                            {
                                <li class="list-group-item bg-secondary text-light d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@task.Name</strong> 
                                        <small class="text-muted">@task.Date.ToShortDateString()</small>
                                    </div>
                                    <form method="post" asp-action="DeleteTask" asp-controller="Schedule" class="d-inline">
                                        <input type="hidden" name="id" value="@task.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center">
                            No future tasks
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
