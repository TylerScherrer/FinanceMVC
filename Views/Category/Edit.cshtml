@model BudgetTracker.Models.Category

<div class="container">
    <h2 class="mb-4">Edit Category</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="BudgetId" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Category Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="InitialAllocatedAmount" class="form-label">Initial Allocated Amount</label>
            <input asp-for="InitialAllocatedAmount" class="form-control" type="number" step="0.01" min="0.01" required />
            <span asp-validation-for="InitialAllocatedAmount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AllocatedAmount" class="form-label">Allocated Amount</label>
            <input asp-for="AllocatedAmount" class="form-control" type="number" step="0.01" min="0.01" required />
            <span asp-validation-for="AllocatedAmount" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-controller="Budget"
   asp-action="Details"
   asp-route-id="@Model.BudgetId"
   class="btn btn-secondary">
    Cancel
</a>

    </form>
</div>
