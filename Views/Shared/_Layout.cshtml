<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BudgetTracker</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BudgetTracker.styles.css" asp-append-version="true" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome (Icons) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHqTz5xxM9vo3KfyOP9/tZh6W1z5CxBOZ6Sk6NtkEnxOlOblFxf5h8d+7SYvc97VRuHEtQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Global Fixes -->
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            width: 100%;
            background-color: #000 !important; /* Dark background */
        }

        .container-fluid {
            margin: 0;
            padding: 0;
            width: 100%;
        }

        main {
            min-height: calc(100vh - 80px); /* Adjust based on header/footer height */
        }

        footer {
            margin-top: auto;
            position: relative;
            width: 100%;
        }

        /* Sidebar Styles */
        #sidebar {
            width: 250px;
            border-right: 1px solid rgb(255, 255, 255);
            background-color: #1e1e1e;
            color: #fff;
            height: 100vh;
            position: sticky;
            top: 0;
            display: flex;
            flex-direction: column;
        }

        .sidebar-title {
            color: #ffffff;
        }

        .sidebar-links .nav-link {
            color: #fff;
            padding: 10px;
            font-weight: 500;
            transition: background-color 0.2s, color 0.2s;
        }

        .sidebar-links .nav-link:hover {
            background-color: #49494b;
            color: #fff;
        }

        .nav-link.active {
            background-color: #555557;
            color: #fff;
        }

        .footer-text {
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body class="bg-dark text-light">
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="d-flex flex-column p-3">
            <h3 class="fw-bold mb-4 text-center sidebar-title">
                <i class="fas fa-coins me-2"></i>My Dashboard
            </h3>
            <ul class="nav flex-column sidebar-links">
                <li class="nav-item">
                    <a class="nav-link active" asp-area="" asp-controller="Budget" asp-action="Index">
                        <i class="fas fa-chart-line me-2"></i>Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Schedule" asp-action="Index">
                        <i class="fas fa-calendar-alt me-2"></i>Schedule
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="ToDo" asp-action="Index">
                        <i class="fas fa-tasks me-2"></i>Tasks
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Planner" asp-action="Index">
                        <i class="fas fa-tasks me-2"></i>Organizer
                    </a>
                </li>
            </ul>
            <div class="mt-auto text-center text-light footer-text">
                &copy; 2024 BudgetTracker
            </div>
        </nav>

        <!-- Main Content -->
        <div class="flex-fill">
            <div class="container-fluid">
                <header class="p-3 mb-3 text-white">
                    <div class="container">
                        <h1>@ViewData["Title"]</h1>
                    </div>
                </header>
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
                <footer class="bg-secondary text-light text-center py-3">
                    <small>&copy; 2024 BudgetTracker. All rights reserved.</small>
                </footer>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
