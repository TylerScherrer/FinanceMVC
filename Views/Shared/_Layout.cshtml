<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BudgetTracker</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BudgetTracker.styles.css" asp-append-version="true" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Global Fixes -->
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            width: 100%;
            background-color: #000 !important; /* Dark background */
        }

        .container-fluid {
            margin: 0;
            padding: 0;
            width: 100%;
        }

        main {
            min-height: calc(100vh - 80px); /* Adjust based on header/footer height */
        }

        footer {
            margin-top: auto;
            position: relative;
            width: 100%;
        }
    </style>
</head>
<body class="bg-dark text-light">
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="d-flex flex-column p-1 custom-sidebar">
            <h3 class="fw-bold mb-4 text-center sidebar-title">
                <i class="fas fa-coins me-2"></i>Organizer
            </h3>
            <ul class="nav flex-column sidebar-links">
                <li class="nav-item">
                    <a class="nav-link active" asp-area="" asp-controller="Budget" asp-action="Index">
                        <i class="fas fa-chart-line me-2"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Schedule" asp-action="Index">
                        <i class="fas fa-calendar-alt me-2"></i>My Schedule
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="ToDo" asp-action="Index">
                        <i class="fas fa-tasks me-2"></i>My Tasks
                    </a>
                    <a class="nav-link" asp-area="" asp-controller="Planner" asp-action="Index">
                        <i class="fas fa-tasks me-2"></i>Planner
                    </a>
                </li>
            </ul>
            <div class="mt-auto text-center text-light footer-text">
                &copy; 2024 BudgetTracker
            </div>
        </nav>

        <!-- Main Content -->
        <div class="flex-fill">
            <div class="container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
