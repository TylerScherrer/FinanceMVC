@model IEnumerable<BudgetTracker.Models.Bill>

<div class="container-fluid bg-dark text-light py-4">

    
    <h1 class="fw-bold text-light">Bills for Budget</h1>
    <a asp-action="Create" asp-route-budgetId="@ViewBag.BudgetId" class="btn btn-primary">Add Bill</a>
    
    <table class="table table-dark table-bordered mt-3">
        <thead class="table-secondary">
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Due Date</th>
                <th>Is Paid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in Model)
            {
                <tr>
                    <td>@bill.Name</td>
                    <td>@bill.Amount.ToString("C")</td>
                    <td>@bill.DueDate.ToShortDateString()</td>
                    <td class="@(bill.IsPaid ? "text-success" : "text-danger")">
                        @(bill.IsPaid ? "Yes" : "No")
                    </td>
                    <td>
                        <!-- Mark as Paid -->
                        <form asp-action="MarkAsPaid" asp-controller="Bill" method="post" class="d-inline">
                            <input type="hidden" name="budgetId" value="@ViewBag.BudgetId" />
                            <input type="hidden" name="id" value="@bill.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Mark as Paid</button>
                        </form>

                        <!-- Edit -->
                        <a asp-action="Edit" asp-route-id="@bill.Id" class="btn btn-warning btn-sm">Edit</a>

                        <!-- Delete -->
                        <form asp-action="Delete" asp-controller="Bill" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@bill.Id" />
                            <input type="hidden" name="budgetId" value="@ViewBag.BudgetId" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
