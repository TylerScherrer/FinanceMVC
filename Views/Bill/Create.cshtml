@model BudgetTracker.Models.Bill

<div class="container py-4 bg-dark text-light">
    <h1 class="fw-bold mb-4">Add Bill</h1>
    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="BudgetId" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label">Amount</label>
            <input asp-for="Amount" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="DueDate" class="form-label">Due Date</label>
            <input asp-for="DueDate" class="form-control" type="date" />
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsPaid" class="form-check-input" />
            <label asp-for="IsPaid" class="form-check-label">Is Paid</label>
        </div>

        <!-- Save Button -->
        <button type="submit" class="btn custom-create-btn">Save</button>

        <!-- Cancel Button: link that calls your Bill/ViewBills action with the same budgetId -->
        <a asp-action="ViewBills"
           asp-controller="Bill"
           asp-route-budgetId="@Model.BudgetId"
           class="btn custom-delete-btn">
            Cancel
        </a>
    </form>
</div>
