@model BudgetTracker.Models.Budget

@{
    ViewData["Title"] = "Edit Budget";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="fw-bold mb-0">Edit Budget</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <!-- Hidden field for Budget ID -->
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">Budget Name</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="TotalAmount" class="form-label">Total Amount</label>
                            <input asp-for="TotalAmount" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="TotalAmount" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn custom-create-btn btn-lg">
                                Save Changes
                            </button>
                            <a asp-action="Index" class="btn custom-delete-btn btn-lg">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Client-Side Validation -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
