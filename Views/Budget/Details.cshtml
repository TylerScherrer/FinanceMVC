@model BudgetTracker.Models.Budget

<h1>Budget Details</h1>

<div class="card mb-3">
    <div class="card-body">
        <h3 class="card-title">@Model.Name</h3>
        <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
        <p><strong>Date Created:</strong> @Model.DateCreated.ToShortDateString()</p>
        <p><strong>Remaining Amount:</strong> @Model.RemainingAmount.ToString("C")</p>
    </div>
</div>

<h2>Categories</h2>
<a class="btn btn-outline-primary mb-3" href="@Url.Action("Create", "Category", new { budgetId = Model.Id })">Add Category</a>

@if (Model.Categories != null && Model.Categories.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Allocated Amount</th>
                <th>Remaining Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.InitialAllocatedAmount.ToString("C")</td>
                    <td>@category.AllocatedAmount.ToString("C")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary me-2" href="@Url.Action("Details", "Category", new { id = category.Id })">
                            <i class="fas fa-eye me-1"></i>View
                        </a>
                        <a class="btn btn-sm btn-outline-warning me-2" href="@Url.Action("Edit", "Category", new { id = category.Id })">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <form asp-action="Delete" asp-controller="Category" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@category.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash me-1"></i>Delete
                            </button>
                        </form>
                        <button class="btn btn-sm btn-outline-info" type="button" data-bs-toggle="collapse" data-bs-target="#transactions-@category.Id">
                            <i class="fas fa-list me-1"></i>Transactions
                        </button>
                    </td>
                </tr>
                <tr class="collapse" id="transactions-@category.Id">
                    <td colspan="4">
                        @if (category.Transactions != null && category.Transactions.Any())
                        {
                            <table class="table table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Description</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in category.Transactions)
                                    {
                                        <tr>
                                            <td>@transaction.Date.ToShortDateString()</td>
                                            <td>@transaction.Description</td>
                                            <td>@transaction.Amount.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p class="text-muted">No transactions available for this category.</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No categories available.</p>
}
