@model BudgetTracker.Models.Budget

<div class="container-fluid py-4" style="background: #f8f9fa;">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="fw-bold" style="font-size: 2.5rem;">@Model.Name</h1>
        <p class="text-muted">View and manage your budget details.</p>
    </div>

    <!-- Budget Details Card -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body d-flex flex-column">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h4 class="fw-bold mb-1">
                        <i class="fas fa-wallet text-dark me-2"></i>Budget Information
                    </h4>
                    <small class="text-muted">
                        Created on: @Model.DateCreated.ToShortDateString()
                    </small>
                </div>
            </div>
            
            <div class="mb-3">
                <div class="text-muted">
                    <strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")
                </div>
                <div class="text-muted">
                    <strong>Remaining Amount:</strong>
                    <span class="fw-bold text-success">
                        @Model.RemainingAmount.ToString("C")
                    </span>
                </div>
            </div>

            <!-- Add Category Button -->
            <div class="d-flex flex-wrap gap-2">
                <a class="btn btn-primary btn-sm" 
                   href="@Url.Action("Create", "Category", new { budgetId = Model.Id })">
                    <i class="fas fa-folder-plus me-1"></i>Add Category
                </a>
            </div>
        </div>
    </div>

    <!-- Categories Section -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h5 class="fw-bold mb-3">
                <i class="fas fa-list-ul me-2"></i>Categories
            </h5>

            @if (Model.Categories != null && Model.Categories.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Allocated (Initial)</th>
                                <th>Allocated (Current)</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model.Categories)
                            {
                                <tr>
                                    <td>@category.Name</td>
                                    <td>@category.InitialAllocatedAmount.ToString("C")</td>
                                    <td>@category.AllocatedAmount.ToString("C")</td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-primary me-2" 
                                           href="@Url.Action("Details", "Category", new { id = category.Id })">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                        <a class="btn btn-sm btn-outline-warning me-2" 
                                           href="@Url.Action("Edit", "Category", new { id = category.Id })">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </a>
                                        <form asp-action="Delete" 
                                              asp-controller="Category" 
                                              method="post" 
                                              class="d-inline">
                                            <input type="hidden" name="id" value="@category.Id" />
                                            <button type="submit" 
                                                    class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </button>
                                        </form>
                                        <button class="btn btn-sm btn-outline-info ms-2" 
                                                type="button" 
                                                data-bs-toggle="collapse" 
                                                data-bs-target="#transactions-@category.Id">
                                            <i class="fas fa-list me-1"></i>Transactions
                                        </button>
                                    </td>
                                </tr>

                                <!-- Collapsible Transactions Row -->
                                <tr class="collapse" id="transactions-@category.Id">
                                    <td colspan="4">
                                        @if (category.Transactions != null && category.Transactions.Any())
                                        {
                                            <div class="table-responsive mt-3">
                                                <table class="table table-bordered mb-0">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th style="width: 15%">Date</th>
                                                            <th style="width: 50%">Description</th>
                                                            <th style="width: 15%">Amount</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var transaction in category.Transactions)
                                                        {
                                                            <tr>
                                                                <td>@transaction.Date.ToShortDateString()</td>
                                                                <td>@transaction.Description</td>
                                                                <td>@transaction.Amount.ToString("C")</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="text-muted mt-3">
                                                No transactions available for this category.
                                            </p>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-light border mt-3" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    No categories available.
                </div>
            }
        </div>
    </div>
</div>
<div class="row">
    <!-- Main Content -->
    <div class="col-lg-9">
        <!-- Existing Budget Details and Categories Code -->
    </div>

    <!-- Sidebar for Recent Transactions -->
    <div class="col-lg-3">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="fw-bold mb-0">
                    <i class="fas fa-clock text-primary me-2"></i>Recent Transactions
                </h5>
            </div>
            <div class="card-body">
                @await Html.PartialAsync("_RecentTransactions", Model.RecentTransactions)
            </div>
        </div>
    </div>
</div>
