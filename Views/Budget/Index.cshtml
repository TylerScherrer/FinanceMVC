@using System.Linq
@using Microsoft.EntityFrameworkCore
@model BudgetTracker.Models.BudgetWithTasksViewModel
@using BudgetTracker.Models;

<!-- 
  In your _Layout or global <head>:
  1) <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  2) <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  3) Ensure body/html has minimal margin/padding with a gradient background
-->

<style>

    /* Hero gradient */
    .hero-section {
        background: linear-gradient(135deg, #343a40 0%, #232526 100%);
        padding: 3rem 1rem;
        text-align: center;
        color: #f8f9fa;
        margin-bottom: 2rem;
        position: relative;
    }
    .hero-section::after {
        content: "";
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: url('https://picsum.photos/1920/1080?grayscale&blur=3') center/cover no-repeat;
        opacity: 0.25;
        z-index: 0;
    }
    .hero-section-content {
        position: relative;
        z-index: 1; /* Ensure text is above background overlay */
    }

    /* Custom purple outline button */
    .btn-outline-purple {
        color: #d0bfff;
        border-color: #d0bfff;
    }
    .btn-outline-purple:hover {
        background-color: #d0bfff;
        color: #fff; /* changed from black to white */
    }

    /* OVERRIDES to force text to be white or light on dark backgrounds */

    /* 1) Force any .text-dark to be white */
    .text-dark {
        color: #fff !important;
    }

    /* 2) Make .text-muted a light gray instead of dark/black */
    .text-muted {
        color: #b3b3b3 !important;
    }

    /* 3) Force placeholders to be light */
    ::-webkit-input-placeholder {
        color: #ccc !important;
        opacity: 1;
    }
    :-ms-input-placeholder {
        color: #ccc !important;
        opacity: 1;
    }
    ::placeholder {
        color: #ccc !important;
        opacity: 1;
    }
</style>

<div class="d-flex flex-nowrap">





    <!-- Main Content Column -->
    <div class="flex-fill">
        <!-- Hero Section -->
        <div class="hero-section text-light mb-4">
            <div class="hero-section-content">
                <h1 class="display-5 fw-bold">My Financial Dashboard</h1>
                <p class="lead mb-0">
                    Organize budgets, manage tasks, and schedule your day efficiently.
                </p>
            </div>
        </div>

        <!-- Content Container -->
        <div class="container-fluid px-4">
            <div class="row g-3">
                <!-- Left Column: Budget Management -->
                <div class="col-lg-8">
                    <!-- Create New Budget Section -->
                    <div class="card glass-panel mb-4 text-light">
                        <div class="card-body">
                            <h4 class="fw-bold mb-3">
                                <i class="fas fa-plus-circle text-info me-2"></i>Create New Budget
                            </h4>
                            <form asp-action="Create"
                                  asp-controller="Budget"
                                  method="post"
                                  class="row g-2">
                                <div class="col-md-5">
                                    <input type="text"
                                           name="Name"
                                           class="form-control bg-transparent text-light border-light"
                                           placeholder="Budget Name"
                                           required />
                                </div>
                                <div class="col-md-5">
                                    <input type="number"
                                           name="TotalAmount"
                                           class="form-control bg-transparent text-light border-light"
                                           placeholder="Total Amount"
                                           step="0.01"
                                           required />
                                </div>
                                <div class="col-md-2 d-grid">
                                    <!-- Light Blue 'Add' -->
                                    <button type="submit" class="btn custom-create-btn fw-semibold">
                                        Add
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Budgets as Cards -->
                    <h4 class="fw-bold mb-3 text-light">
                        <i class="fas fa-wallet me-2 text-warning"></i>Your Budgets
                    </h4>
                    @if (Model.Budgets.Any())
                    {
                        <div class="row row-cols-1 row-cols-md-2 g-3">
                            @foreach (var budget in Model.Budgets)
                            {
                                <div class="col">
                                    <div class="card glass-panel h-100 text-light">
                                        <div class="card-body d-flex flex-column">
                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                <div>
                                                    <h5 class="fw-bold">@budget.Name</h5>
                                                    <small class="text-muted">
                                                        Created: @budget.DateCreated.ToShortDateString()
                                                    </small>
                                                </div>


                                            </div>

                                            <!-- Budget amounts -->
                                            <div class="mb-3">
                                                <div class="text-muted">
                                                    Total: @budget.TotalAmount.ToString("C")
                                                </div>
                                                <div class="text-muted">
                                                    Remaining:
                                                    <span class="fw-bold @(budget.RemainingAmount >= 0 ? "text-success" : "text-danger")">
                                                        @budget.RemainingAmount.ToString("C")
                                                    </span>
                                                </div>
                                            </div>

                                            <!-- Budget actions -->
                                            <div class="mt-auto d-flex flex-wrap gap-2">
                                                <!-- Light Purple 'View' -->
                                                <a class="btn custom-view-btn  btn-sm"
                                                   href="@Url.Action("Details", "Budget", new { id = budget.Id })">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </a>
                                                <!-- Light Yellow 'Edit' -->
                                                <a class="btn custom-edit-btn  btn-sm"
                                                   href="@Url.Action("Edit", "Budget", new { id = budget.Id })">
                                                    <i class="fas fa-edit me-1"></i>Edit
                                                </a>
                                                <!-- Light Blue 'Add Category' -->
                                                <a class="btn custom-create-btn  btn-sm"
                                                   href="@Url.Action("Create", "Category", new { budgetId = budget.Id })">
                                                    <i class="fas fa-folder-plus me-1"></i>Add Category
                                                </a>
                                                            <a class="btn custom-bills-btn  btn-sm"
                                                href="@Url.Action("ViewBills", "Bill", new { budgetId = budget.Id })">
                                                    <i class="fas fa-file-invoice-dollar me-1"></i>View Bills
                                                </a>
                                                <!-- Light Red 'Delete' -->
                                                <button class="btn custom-delete-btn  btn-sm delete-btn"
                                                        type="button"
                                                        data-id="@budget.Id"
                                                        data-name="@budget.Name"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#deleteBudgetModal">
                                                    <i class="fas fa-trash-alt me-1"></i>Delete
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- "No budgets available" is also a light color, as .alert-secondary is on dark -->
                        <div class="alert alert-secondary text-center mt-3" role="alert">
                            No budgets available. Create one above to get started.
                        </div>
                    }
                </div>

                <!-- Right Column: Tasks & Schedule -->
                <div class="col-lg-4">
                    <!-- Upcoming Tasks for This Week -->
                    <div class="card glass-panel mb-4">
                        <div class="card-body text-light">
                            <h5 class="fw-bold mb-3 text-white">
                                <i class="fas fa-calendar-week me-2"></i>Upcoming Tasks This Week
                            </h5>
                            <div class="d-flex justify-content-between mb-3">
                                <div class="fw-semibold">Tasks</div>
                                <!-- Light Blue 'Add Task' -->
                                <a class="btn btn-sm custom-create-btn"
                                   href="@Url.Action("Index", "Schedule")">
                                    <i class="fas fa-plus me-1"></i>Add Task
                                </a>
                            </div>
                            <ul class="list-group list-group-flush">
                                @if (Model.CurrentWeekTasks != null && Model.CurrentWeekTasks.Any())
                                {
                                    @foreach (var task in Model.CurrentWeekTasks)
                                    {
                                        <li class="list-group-item bg-transparent border-0 border-bottom border-secondary d-flex justify-content-between align-items-center">
                                            <div>
                                                <span class="task-text">@task.Name</span>
                    <br />
                    <small class="task-date">@task.Date.ToShortDateString()</small>
                                            </div>
                                            <!-- Light Red 'Delete Task' -->
                                            <form asp-action="DeleteScheduledTask"
                                                  asp-controller="Schedule"
                                                  method="post"
                                                  class="d-inline">
                                                <input type="hidden" name="id" value="@task.Id" />
                                                <button type="submit"
                                                        class="btn btn-sm custom-delete-btn"
                                                        title="Delete Task">
                                                    <i class="fas fa-trash me-1"></i>Delete
                                                </button>
                                            </form>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="list-group-item bg-transparent text-muted">
                                        No tasks for this week
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <!-- Bills for the Month -->
                    <h5 class="fw-bold mb-3 text-light">
                        <i class="fas fa-file-invoice-dollar me-2 text-info"></i>Bills for the Month
                    </h5>
                    @if (Model.MonthlyBills != null && Model.MonthlyBills.Any())
                    {
                        <div class="table-responsive mb-3 glass-panel text-light p-3">
                            <table class="table table-sm table-dark table-bordered border-secondary align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Amount</th>
                                        <th>Due Date</th>
                                        <th>Is Paid</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bill in Model.MonthlyBills)
                                    {
                                        <tr>
                                            <td>@bill.Name</td>
                                            <td>@bill.Amount.ToString("C")</td>
                                            <td>@bill.DueDate.ToShortDateString()</td>
                                            <td>@(bill.IsPaid ? "Yes" : "No")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center mb-3" role="alert">
                            No bills available for the current month.
                        </div>
                    }

                    <!-- Today's Tasks -->
                    <div class="card glass-panel text-light">
                        <div class="card-body">
                            <h5 class="fw-bold mb-3 text-white">
                                <i class="fas fa-check-square me-2"></i>Today's Tasks
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-sm table-dark table-bordered border-secondary align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th>Task</th>
                                            <th>Due</th>
                                            <th>Status</th>
                                            <th class="text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.TodayTasks.Any())
                                        {
                                            @foreach (var task in Model.TodayTasks)
                                            {
                                                <tr>
                                                    <td>@task.Name</td>
                                                    <td>@task.DueDate.ToShortDateString()</td>
                                                    <td>@(task.IsCompleted ? "Completed" : "Pending")</td>
                                                    <td class="text-end">
                                                        <!-- Light Green 'Mark Complete' -->
                                                        <form method="post"
                                                              asp-action="MarkComplete"
                                                              asp-controller="ToDo"
                                                              asp-route-id="@task.Id"
                                                              class="d-inline">
                                                            <button type="submit"
                                                                    class="btn custom-complete-btn btn-sm"
                                                                    title="Mark Complete">
                                                                <i class="fas fa-check me-0">Complete</i>
                                                            </button>
                                                        </form>
                                                        <!-- Light Red 'Delete Task' -->
                                                        <form method="post"
                                                              asp-action="Delete"
                                                              asp-controller="ToDo"
                                                              asp-route-id="@task.Id"
                                                              class="d-inline">
                                                            <button type="submit"
                                                                    class="btn custom-delete-btn btn-sm"
                                                                    title="Delete Task">
                                                                <i class="fas fa-trash me-0">Delete</i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center text-muted">
                                                    No tasks for today
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Daily Schedule Section -->
            <div class="card glass-panel mt-5 text-light">
                <div class="card-body">
                    <h5 class="fw-bold mb-3 text-white">
                        <i class="fas fa-clock me-2"></i>Organize My Day
                    </h5>
                    <div class="table-responsive">
                        <table class="table table-dark table-bordered border-secondary align-middle mb-0">
                            <thead>
                                <tr>
                                    <th style="width:15%">Time</th>
                                    <th>Task</th>
                                    <th style="width:10%">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int hour = 8; hour <= 20; hour++)
                                {
                                    var scheduledTask = Model.DailySchedules?
                                        .FirstOrDefault(ds => ds.Hour == hour);

                                    <tr>
                                        <td class="fw-semibold">
                                            @(hour <= 12 ? $"{hour} a.m." : $"{hour - 12} p.m.")
                                        </td>
                                        <td>
                                            @if (scheduledTask != null)
                                            {
                                                <span class="fw-bold text-white">
                                                    @scheduledTask.Task.Name
                                                </span>
                                            }
                                            else
                                            {
                                                <form method="post"
                                                    asp-action="AssignTaskToTime"
                                                    asp-controller="ToDo"
                                                    class="row g-2 align-items-center">
                                                    <input type="hidden" name="hour" value="@hour" />
                                                    <div class="col-8">
                                                        <select name="taskId"
                                                                class="form-select form-select-sm bg-dark text-light border-secondary">
                                                            <option value="">-- Select Task --</option>
                                                            @foreach (var task in Model.TodayTasks)
                                                            {
                                                                <option value="@task.Id">@task.Name</option>
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="col-4 d-grid">
                                                        <button type="submit"
                                                                class="btn btn-sm custom-create-btn fw-semibold">
                                                            Assign
                                                        </button>
                                                    </div>
                                                </form>

                                            }
                                        </td>
                                        <td>
                                            @if (scheduledTask != null)
                                            {
                                                <form method="post"
                                                      asp-action="UnassignTask"
                                                      asp-controller="ToDo"
                                                      class="d-inline">
                                                    <input type="hidden" name="taskId" value="@scheduledTask.Task.Id" />
                                                    <input type="hidden" name="hour" value="@hour" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        Unassign
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Single Delete Budget Modal (shared by all budgets) -->
<div class="modal fade" id="deleteBudgetModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-light glass-panel">
            <div class="modal-header border-0">
                <h5 class="modal-title text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Budget
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Will be updated dynamically with JavaScript -->
                <p id="deleteBudgetModalBody"></p>
            </div>
            <div class="modal-footer border-0">
                <!-- The form that will be submitted -->
                <form id="deleteBudgetForm" method="post">
                    <input type="hidden" name="id" id="deleteBudgetId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        Yes, Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript to dynamically fill the Delete Budget Modal -->
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const deleteButtons = document.querySelectorAll(".delete-btn");
        const modalBody = document.getElementById("deleteBudgetModalBody");
        const deleteIdInput = document.getElementById("deleteBudgetId");
        const deleteForm = document.getElementById("deleteBudgetForm");

        deleteButtons.forEach(button => {
            button.addEventListener("click", () => {
                const budgetId = button.getAttribute("data-id");
                const budgetName = button.getAttribute("data-name");

                modalBody.textContent = `Are you sure you want to delete "${budgetName}"?`;
                deleteIdInput.value = budgetId;
                deleteForm.action = "/Budget/Delete"; // Update if needed
            });
        });
    });
</script>
